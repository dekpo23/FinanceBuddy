{
  "version": "1.0",
  "goal": "Infer user's financial preferences, risk tolerance, and investment goals",
  "questions": [
    {
      "id": "q1",
      "text": "What is your primary financial goal right now?",
      "type": "choice",
      "options": [
        "Aggressive Wealth Growth (High Risk/Reward)",
        "Steady Passive Income (Dividends/Rent)",
        "Capital Preservation (Protect against inflation)",
        "Specific Savings Goal (House, Car, Education)",
        "Better Spending & Debt Management"
      ]
    },
    {
      "id": "q2",
      "text": "How would you react if your investment portfolio dropped 20% in one month?",
      "type": "choice",
      "options": [
        "Buy more (See it as a discount)",
        "Hold and wait for recovery",
        "Sell some to prevent further loss",
        "Sell everything immediately (Panic)"
      ]
    },
    {
      "id": "q3",
      "text": "What is your initial investment capital?",
      "type": "range",
      "currency": "NGN",
      "options": [
        "Under ₦100,000",
        "₦100,000 - ₦500,000",
        "₦500,000 - ₦2,000,000",
        "₦2,000,000 - ₦10,000,000",
        "Over ₦10,000,000"
      ]
    },
    {
      "id": "q4",
      "text": "When do you need to access these funds?",
      "type": "choice",
      "options": [
        "Short Term (Less than 1 year)",
        "Medium Term (1 - 3 years)",
        "Long Term (5+ years)"
      ]
    },
    {
      "id": "q5",
      "text": "What describes your preferred investment style?",
      "type": "choice",
      "options": [
        "Active Trader (Daily/Weekly monitoring)",
        "Balanced (Monthly check-ins)",
        "Passive / Automate it (Set and forget)"
      ]
    },
    {
      "id": "q6",
      "text": "How would you rate your financial knowledge?",
      "type": "choice",
      "options": [
        "Beginner (I need guidance)",
        "Intermediate (I understand basics)",
        "Advanced (I manage my own portfolio)"
      ]
    },
    {
      "id": "q7",
      "text": "Which currency do you primarily want to invest in?",
      "type": "choice",
      "options": [
        "Naira (NGN) only",
        "Dollars (USD) only",
        "Mix of both (Hedging)"
      ]
    }
  ]
}
